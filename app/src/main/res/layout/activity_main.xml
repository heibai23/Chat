<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.test.MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="小啦"
        android:textSize="28sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/title_bar"
        android:id="@+id/tvEdit_main"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_bar"
        android:id="@+id/relEdit_main">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/login_edit_normal"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/btnSend_main"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/etChat_main"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:background="@drawable/main_send"
            android:id="@+id/btnSend_main"
            android:text="发送"
            android:textSize="30sp"/>
    </RelativeLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/relEdit_main"
        android:layout_below="@+id/tvEdit_main"
        android:id="@+id/lv_main_message">

    </ListView>

</RelativeLayout>
